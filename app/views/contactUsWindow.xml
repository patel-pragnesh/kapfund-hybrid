<Alloy>
	<Window id="window" class="formBackground">	
		<View>
			<View backgroundColor="#212c38" top="0" height="40">
				
				<View layout="horizontal" width="Titanium.UI.SIZE">
					<ImageView image="/images/Ballpark-Official-White.png" height="40" />	
					<Label color="white" id="lblTitle" class="titleLabel" left="3">- Contact Us</Label>
				</View>
				
				<Widget src="bpc.button" id="btnBack"
					faicon="fa-angle-left" text="" left="-1" width="50" backgroundColor="#151d27"
					class="loginButton navBars" onClick="goBack" />
			</View>
		</View>
		<ScrollView bottom="50" top="40">
			<View layout="vertical" width="90%">
				<Label top="7">Have questions or issues?</Label>
				<Label class="small">Send us a message and we will get back to you as soon as we can.</Label>
				
				<Label top="10" left="0" width="Titanium.UI.SIZE" color="#3b1213">Subject:</Label>
				<View backgroundColor="#f1f3f4" height="Titanium.UI.SIZE">
					<TextArea left="5" id="txtSubject" backgroundColor="#f1f3f4" width="Titanium.UI.FILL" color="#3b1213"></TextArea>
				</View>
				
				<Label top="10" left="0" width="Titanium.UI.SIZE" color="#3b1213">Message:</Label>
				<View backgroundColor="#f1f3f4" height="Titanium.UI.FILL">
					<TextArea left="5" id="txtMessage" backgroundColor="#f1f3f4" width="Titanium.UI.FILL" height="100%" color="#3b1213"></TextArea>
				</View>
			</View>
		</ScrollView>
		<View bottom="0" height="40">
			<Widget src="bpc.button" onClick="goBack"
				faicon="fa-times-circle" text="Cancel" left="0" width="50%" borderWidth="0" backgroundColor="#ba2731"
				class="redButton"  />
			<Widget src="bpc.button" right="0" height="45" width="50%" onClick="send"
					faicon="fa-envelope" text="Send"
					class="loginButton"  />
		</View>
		<View id="loadingView" visible="false">
			<View backgroundColor="black" opacity="0.5" >
			</View>
			<ActivityIndicator id="activityIndicator" color="white" message="Processing..."/>
		</View>
	</Window>
</Alloy>
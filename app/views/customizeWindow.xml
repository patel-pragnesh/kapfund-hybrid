<Alloy>
	<Model src="venue" />
	<Model src="vendor"/>
	<Model src="settings" />
	
	<Window id="window" backgroundColor="#e2e3e4" top="0">
			<View height="40" top="0">
				
				
				<View backgroundColor="#212c38" top="0" height="40">
					<View layout="horizontal" width="Titanium.UI.SIZE" visible="true" id="viewTitle">
						<ImageView image="/images/Ballpark-Official-White.png" height="40" />	
						<Label class="light-white titleLabel" id="lblLogoTitle" left="3">- Customize</Label>
					</View>
					<Widget src="bpc.button" id="btnBack" 
						faicon="fa-angle-left" text="" left="0" width="50" backgroundColor="#151d27"
						class="loginButton navBars" onClick="goBack" />
				</View>			
			</View>
			<View id="mainView" class="container"  bottom="200" top="40">
				<View layout="vertical" height="Ti.UI.SIZE" width="100%" >
					<View backgroundColor="#5166a1" height="100">
						<View left="0" height="200">
							<ImageView id="ItemImage" left="0" height="400" width="400" image="http://livedoor.blogimg.jp/sytsyt/imgs/c/6/c6050bdc.jpg" />
						</View>

						<View right="0" width="Titanium.UI.SIZE" >
							<View backgroundColor="#163282" opacity="0.7" width="Titanium.UI.SIZE">
								<Label visible="false" width="Titanium.UI.SIZE" text="    Hot Dog Blank    " class="light-white" id="ItemNameHidden"></Label>
								<Label visible="false" width="Titanium.UI.SIZE" class="light-white" id="PriceTextHidden">$2.50</Label>
							</View>
							<View layout="vertical" width="Titanium.UI.SIZE" height="Titanium.UI.SIZE" >
								<Label width="Titanium.UI.SIZE" text="    Hot Dog Blank    " class="light-white" id="ItemName">Hot Dog Blank</Label>
								<View  height="2" backgroundColor="white" width="Titanium.UI.SIZE">
									<Label height="2" id="ItemNameHidden2" backgroundColor="White" text="Hot Dog Blank" class="light-white"></Label>
								</View>
								<Label width="Titanium.UI.SIZE" class="light-white" id="PriceText">$2.50</Label>
							</View>
						</View>
					</View>
					<View width="80%" layout="vertical">
						<Label left="0" top="20" width="Titanium.UI.SIZE" class="normal" color="#3b1213">Select Condiments:</Label>
						<ListView backgroundColor="#f1f3f4" borderWidth="0" height="Titanium.UI.FILL" defaultItemTemplate="template" separatorColor="transparent" id="lstMenuItems" allowsSelection="false" top="5" visible="true"  bottom="0">
							<Templates>
								<ItemTemplate name="template" height="35" backgroundColor="#f1f3f4">
									<View  layout="horizontal" onTouchend="condimentClick" left="20" height="Titanium.UI.FILL" width="Titanium.UI.FILL">
										<View height="20" width="20" borderWidth="2" borderColor="#151d27" borderRadius="1">
											<Label visible="true" bindId="checked" class="fa-check" height="Titanium.UI.FILL" color="#212c38" touchEnabled="false"></Label>
										</View>
										<Label left="15" bindId="name" >Ketchup test</Label>
									</View>
									<Label bindId="priceTxt" right="20" top="0" height="Titanium.UI.SIZE">$0.15</Label>
								</ItemTemplate>
							</Templates>
							<ListSection id="condimentList" >
								<HeaderView>
									<View height="15"></View>
								</HeaderView>
	
							</ListSection>
						</ListView>
					</View>			
				</View>
			</View>
			<View id="totalsView" bottom="50" width="80%" height="150" layout="vertical">
				<View height="Titanium.UI.SIZE" top="5" layout="horizontal" width="Titanium.UI.SIZE" left="0">	
					<Label class="normal" color="#3b1213">Quantity:</Label>					
					<Widget src="bpc.button" visible="true" class="button-qty" onClick="decreaseQty"
						faicon="fa-minus-circle" text="" width="30" backgroundColor="transparent" height="40" borderWidth="0"
						 color="#3b1213" />
					<Label backgroundColor="#f1f3f4" id="lblQty" width="40" textAlign="center" class="normal" height="25" color="#3b1213">x 2</Label>
					<Widget src="bpc.button" class="button-qty" onClick="increaseQty"
						faicon="fa-plus-circle" text="" width="30" backgroundColor="transparent" height="40" borderWidth="0"
						 color="#3b1213" />
				</View>
				<View height="2" right="0" width="100%" backgroundColor="#151d27"></View>
				<View id="viewTotals" right="0" backgroundColor="#f1f3f4" top="15" height="Titanium.UI.SIZE" width="Titanium.UI.FILL" layout="vertical">
					
					<Label id="lblItemNamePrice" right="0" class="normal" color="#3b1213">Hot Dog(1) $3.00</Label>
					<Label id="lblCondPrice" right="0" class="normal" color="#3b1213">Condiments(2) $0.30</Label>
					<Label id="lblTotalQty" right="0" class="normal" color="#3b1213">x 2</Label>
					<View height="2" top="5" right="0" width="50%" backgroundColor="#151d27"></View>
					<Label id="lblTotal" right="0" class="normal" color="#3b1213">Total $6.30</Label>
				</View>
			</View>
			<View id="notificationView" opacity="0" visible="false" height="40" bottom="50" borderWidth="1" backgroundColor="#ba2731">
				<Label id="lblMsg" color="white">NOTIFICATIONS APPEAR HERE</Label>
			</View>
			<View id="cartActionsView" height="40" bottom="0" borderWidth="0">
				<Widget src="bpc.button" id="btnClear" onClick="goBack"
							faicon="fa-times-circle" text="Cancel" left="0" width="50%" borderWidth="0" backgroundColor="#ba2731"
							class="redButton"  />
				<Widget src="bpc.button" id="btnAddToCart" onClick="addToCart"
							faicon="fa-plus-circle" text="Add to cart" right="0" borderWidth="0" width="50%" backgroundColor="#20283e"
							class="loginButton" />
			</View>
			<View id="loadingView" visible="false"  top="0" left="0" width="100%" height="100%">
				<View backgroundColor="black" opacity="0.6">
				</View>
				<Label color="white" id="lblLoading">LOADING...</Label>
			</View>
	</Window>
</Alloy>